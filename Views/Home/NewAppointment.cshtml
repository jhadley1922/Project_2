<!--Form to create/edit an appointment-->
@{
    ViewData["Title"] = "Create an Appointment";
    Timeslot chosenTime = ViewBag.AppointmentTime;
}

@model Project_2.Models.Appointment

<!--Form for User to fill out-->
<div>
    <form method="post" style="text-align:center;">

        <div asp-validation-summary="All"></div>

        @*<input type="hidden" asp-for="Timeslot" value="@chosenTime" />*@
        <input type="hidden" asp-for="TimeslotId" value="@chosenTime.TimeslotId" />

        <label for="Date">Date:</label>
        <input disabled value="@chosenTime.DateTime.ToShortDateString()" id="date"/>
        <br />

        <label for="Time">Time:</label>
        <input disabled value="@chosenTime.DateTime.ToShortTimeString()" id="time"/>
        <br />

        <label asp-for="GroupName">Group Name:</label>
        <input asp-for="GroupName" />
        <br />

        <label asp-for="SizeOfGroup">Group Size:</label>
        <input asp-for="SizeOfGroup" />
        <br />

        <label asp-for="Email">Email Address:</label>
        <input asp-for="Email" />
        <br />

        <label asp-for="Phone">Phone Number:</label>
        <input asp-for="Phone" />
        <br />
        <br />

        <input type="hidden" asp-for="AppointmentId" />

        <button type="submit" class="btn btn-info">Schedule Appointment</button>
    </form>

</div>
