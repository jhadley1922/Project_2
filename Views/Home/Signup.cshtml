@{
    ViewData["Title"] = "Sign Up";
}

<div class="text-center">
    <h3 class="display-4">Select an available date and time for your tour</h3>
    <br />
    <p>Date: </p>
    <div class="row pb-3">
        <div class="col col-2"></div>
        <div class="col col-8">
            <button class="btn btn-outline-secondary">@DateTime.Now.AddDays(-1).ToShortDateString()</button>
            <button class="btn btn-outline-primary">@DateTime.Now.ToShortDateString()</button>
            <button class="btn btn-outline-secondary">@DateTime.Now.AddDays(1).ToShortDateString()</button>
        </div>
        <div class="col col-2"></div>
    </div>
    @for (int i = 8; i < 21; i++)
    {
        //if (true)
